{
    "compilerOptions": {
        "baseUrl": ".",
        "types": [],
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext"
        ],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "verbatimModuleSyntax": false,
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "removeComments": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
        "strict": true
    },
    "exclude": [
        "node_modules"
    ]
}